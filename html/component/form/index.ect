<!-- File Uploader -->
<section class="<%- @tpl %>-section <%- @tpl %>-container">
  <h2 class="<%- @tpl %>-h-section">File Uploader</h2>
  <div class="acs-small">
    テキストが入ります。テキストが入ります。
  </div>

<%
uploaderStates = [
  {state: 'no-advanced-upload', name: 'ドラッグ利用できない時'},
  {state: ''                  , name: 'ドラッグできる時'},
  {state: 'is-dragover'       , name: 'ドラッグ中の時'},
  {state: 'state-uploading'   , name: 'アップロード中の時'},
];

fileStates = {
uploading: {label: 'アップロード中', progress: 'primary', action: 'キャンセル'},
error    : {label: '失敗しました'  , progress: 'danger' , action: '削除'},
uploaded : {label: '完了しました'  , progress: 'primary', action: '削除'},
};

uploadFiles = [
{name: 'ファイル1.txt', size: 10  , progress:   0, state: 'uploading'},
{name: 'ファイル2.txt', size: 10  , progress:  10, state: 'error'},
{name: 'ファイル3.zip', size: 500 , progress:  50, state: 'uploading'},
{name: 'ファイル4 ファイル4 ファイル4.torrent', size: 1000, progress: 100, state: 'uploaded'},
];
%>
<% for define, index in uploaderStates : %>
<% stateClass = if define.state == 'no-advanced-upload' then '' else ' has-advanced-upload ' + define.state %>
  <div class="<%- @tpl %>-form-element">
    <label class="<%- @tpl %>-form-element__label" for="uploader-<%- index %>"><%- define.name %></label>
    <div class="<%- @tpl %>-form-element__control">
      <div class="<%- @tpl %>-form-uploader<%- stateClass %>">
        <div class="<%- @tpl %>-form-uploader__input">
          <span class="<%- @tpl %>-form-uploader__image icon-download"></span>
          <input class="<%- @tpl %>-form-uploader__file" type="file" name="files[]" id="uploader-<%- index %>" data-multiple-caption="{count} files selected" multiple>
          <label class="<%- @tpl %>-form-element__label" for="uploader-<%- index %>">
            <strong>ファイルを選択</strong>
            <span class="<%- @tpl %>-form-uploader__dragndrop"> もしくはここにドラッグ＆ドロップします</span>
          </label>
          <button class="<%- @tpl %>-form-uploader__btn <%- @tpl %>-btn <%- @tpl %>-btn-primary" type="submit">Upload</button>
        </div>
        <div class="<%- @tpl %>-form-uploader__container">
          <div class="<%- @tpl %>-form-uploader__file_list">
<% if define.state == 'state-uploading' : %>
<% for file, index in uploadFiles : %>
<% stateName = fileStates[file.state].label; %>
<% actionName = fileStates[file.state].action; %>
<% progressType = fileStates[file.state].progress; %>
            <div class="<%- @tpl %>-form-uploader__file_info state-<%- file.state %>">
              <div class="<%- @tpl %>-form-uploader__file_name"><%- file.name %></div>
              <div class="<%- @tpl %>-form-uploader__file_size"><%- file.size %>Mb</div>
              <div class="<%- @tpl %>-form-uploader__file_progress"><div class="<%- @tpl %>-progress <%- @tpl %>-progress-<%- progressType %>" data-value="<%- file.progress %>" data-max="100" data-percent="<%- file.progress %>"></div></div>
              <div class="<%- @tpl %>-form-uploader__file_state"><%- stateName %></div>
              <div class="<%- @tpl %>-form-uploader__file_actions">
                <a href="javascript:void(0);"><%- actionName %></a>
              </div>
            </div>
<% end %>
<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</section>
