<% block 'title': %>Component | Form<% end %>
<% block 'site-lead': %>
フォーム要素です。
<% end %>
<% extend @inc + '/layout/_base' %>

<%
textFieldTypes = [
  'text',
  'password',
  'search',
  'tel',
  'url',
  'email',
  'datetime',
  'date',
  'month',
  'week',
  'time',
  'datetime-local',
  'number';
];
%>

<!-- Basic Elements -->
<section class="<%- @tpl %>-section <%- @tpl %>-container">
  <h2 class="<%- @tpl %>-h-section">Basic Elements : 基本要素</h2>
  <div class="acs-small">
    基本的なフォーム要素群です。特別なクラス名を指定しない通常のHTMLマークアップ状態でのスタイル例です。
  </div>

  <section class="<%- @tpl %>-section">
    <h3>Text Field : テキストフィールド</h3>

    <dl>
      <dt>通常</dt>
      <dd>
<% for type in textFieldTypes : %>
        <input type="<%- type %>" placeholder="<%- type %>">
<% end %>
        <textarea placeholder="textarea"></textarea>
      </dd>
    </dl>

    <dl>
      <dt>読み取り専用</dt>
      <dd>
        <input type="text" placeholder="text" value="入力内容" readonly>
        <textarea placeholder="textarea" readonly>入力内容が入ります。</textarea>
      </dd>
    </dl>

    <dl>
      <dt>操作無効</dt>
      <dd>
        <input type="text" placeholder="text" value="入力内容" disabled>
        <textarea placeholder="textarea" disabled>入力内容が入ります。</textarea>
      </dd>
    </dl>
  </section>

  <section class="<%- @tpl %>-section">
    <h3>Choice : 選択</h3>

    <dl>
      <dt>通常</dt>
      <dd>
        <input type="checkbox" name="checkbox-1" value="1">
        <input type="checkbox" name="checkbox-1" value="2" checked="checked">
        <input type="radio" name="radio-1" value="1">
        <input type="radio" name="radio-1" value="2" checked="checked">
        <select name="multiple-select-1" multiple>
          <option value="1">選択肢1</option>
          <option value="2" selected="selected">選択肢2</option>
          <option value="3">選択肢3</option>
        </select>
      </dd>
    </dl>

    <dl>
      <dt>操作無効</dt>
      <dd>
        <input type="checkbox" name="checkbox-2" value="1" disabled>
        <input type="checkbox" name="checkbox-2" value="2" checked="checked" disabled>
        <input type="radio" name="radio-2" value="1" disabled>
        <input type="radio" name="radio-2" value="2" checked="checked" disabled>
        <select name="multiple-select-2" multiple disabled>
          <option value="1">選択肢1</option>
          <option value="2" selected="selected">選択肢2</option>
          <option value="3">選択肢3</option>
        </select>
      </dd>
    </dl>
  </section>

  <section class="<%- @tpl %>-section">
    <h3>Pull Down : プルダウン</h3>

    <dl>
      <dt>通常</dt>
      <dd>
        <select name="select-1">
          <option value="1">選択肢1</option>
          <option value="2">選択肢2</option>
          <option value="3">選択肢3</option>
        </select>
      </dd>
    </dl>

    <dl>
      <dt>操作無効</dt>
      <dd>
        <select name="select-2" disabled>
          <option value="1">選択肢1</option>
          <option value="2">選択肢2</option>
          <option value="3">選択肢3</option>
        </select>
      </dd>
    </dl>
  </section>

  <section class="<%- @tpl %>-section">
    <h3>Picker : ピッカー</h3>

    <dl>
      <dt>通常</dt>
      <dd>
        <input type="color" name="color-1">
        <input type="file" name="file-1">
      </dd>
    </dl>

    <dl>
      <dt>操作無効</dt>
      <dd>
        <input type="color" name="color-2" disabled>
        <input type="file" name="file-2" disabled>
      </dd>
    </dl>
  </section>
</section>



