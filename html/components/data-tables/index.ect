              <input type="checkbox" name="demo-select">
              <span class="<%- @tpl %>choice--faux"></span>
              <span class="<%- @tpl %>assistive-text">Select row Cloudhub</span>
            </label>
          </td>
          <th scope="row" data-label="Opportunity Name">
            <div class="<%- @tpl %>truncate" title="Cloudhub">Cloudhub</div>
          </th>
          <td role="gridcell" data-label="Account Name">
            <div class="<%- @tpl %>truncate" title="Cloudhub">Cloudhub</div>
          </td>
          <td role="gridcell" data-label="Close Date">
            <div class="<%- @tpl %>truncate" title="4/14/2015">4/14/2015</div>
          </td>
          <td role="gridcell" data-label="Prospecting">
            <div class="<%- @tpl %>truncate" title="Prospecting">Prospecting</div>
          </td>
          <td role="gridcell" data-label="Confidence">
            <div class="<%- @tpl %>truncate" title="20%">20%</div>
          </td>
          <td role="gridcell" data-label="Amount">
            <div class="<%- @tpl %>truncate" title="$25k">$25k</div>
          </td>
          <td role="gridcell" data-label="Contact">
            <div class="<%- @tpl %>truncate" title="jrogers@cloudhub.com"><a href="javascript:void(0);">jrogers@cloudhub.com</a></div>
          </td>
          <td role="gridcell" class="<%- @tpl %>cell-shrink" data-label="Actions">
            <button class="<%- @tpl %>icon"><span class="icon-caret-down"></span></button>
          </td>
        </tr>
        <tr class="<%- @tpl %>hint-parent">
          <td role="gridcell" class="<%- @tpl %>cell-shrink" data-label="Select row Cloudhub + Anypoint Connectors">
            <label class="<%- @tpl %>choice">
              <input type="checkbox" name="demo-select">
              <span class="<%- @tpl %>choice--faux"></span>
              <span class="<%- @tpl %>assistive-text">Select row Cloudhub + Anypoint Connectors</span>
            </label>
          </td>
          <th scope="row" data-label="Opportunity Name">
            <div class="<%- @tpl %>truncate" title="Cloudhub + Anypoint Connectors">Cloudhub + Anypoint Connectors</div>
          </th>
          <td role="gridcell" data-label="Account Name">
            <div class="<%- @tpl %>truncate" title="Cloudhub">Cloudhub</div>
          </td>
          <td role="gridcell" data-label="Close Date">
            <div class="<%- @tpl %>truncate" title="4/14/2015">4/14/2015</div>
