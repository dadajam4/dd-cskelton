              <label for="cell-resize-handle-208" class="<%- @tpl %>assistive-text">Amount column width</label>
              <input class="<%- @tpl %>resizable__input <%- @tpl %>assistive-text" type="range" min="20" max="1000" id="cell-resize-handle-208">
              <span class="<%- @tpl %>resizable__handle">
                <span class="<%- @tpl %>resizable__divider"></span>
              </span>
            </div>
          </th>
          <th class="<%- @tpl %>is-sortable <%- @tpl %>is-resizable" scope="col" aria-label="Contact">
            <a href="javascript:void(0);" class="<%- @tpl %>th__action <%- @tpl %>text-link--reset">
              <span class="<%- @tpl %>assistive-text">Sort </span>
              <span class="<%- @tpl %>truncate" title="Contact">Contact</span>
              <span class="icon-arrow-down <%- @tpl %>is-sortable__icon"></span>
              <span class="<%- @tpl %>assistive-text" aria-live="assertive" aria-atomic="true"></span>
            </a>
            <div class="<%- @tpl %>resizable">
              <label for="cell-resize-handle-209" class="<%- @tpl %>assistive-text">Contact column width</label>
              <input class="<%- @tpl %>resizable__input <%- @tpl %>assistive-text" type="range" min="20" max="1000" id="cell-resize-handle-209">
