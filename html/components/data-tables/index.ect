              <input class="<%- @tpl %>resizable__input <%- @tpl %>assistive-text" type="range" min="20" max="1000" id="cell-resize-handle-204">
              <span class="<%- @tpl %>resizable__handle">
                <span class="<%- @tpl %>resizable__divider"></span>
              </span>
            </div>
          </th>
          <th class="<%- @tpl %>is-sortable <%- @tpl %>is-resizable" scope="col" aria-label="Close Date">
            <a href="javascript:void(0);" class="<%- @tpl %>th__action <%- @tpl %>text-link--reset">
              <span class="<%- @tpl %>assistive-text">Sort </span>
              <span class="<%- @tpl %>truncate" title="Close Date">Close Date</span>
              <span class="icon-arrow-down <%- @tpl %>is-sortable__icon"></span>
              <span class="<%- @tpl %>assistive-text" aria-live="assertive" aria-atomic="true"></span>
            </a>
            <div class="<%- @tpl %>resizable">
              <label for="cell-resize-handle-205" class="<%- @tpl %>assistive-text">Close Date column width</label>
              <input class="<%- @tpl %>resizable__input <%- @tpl %>assistive-text" type="range" min="20" max="1000" id="cell-resize-handle-205">
              <span class="<%- @tpl %>resizable__handle">
                <span class="<%- @tpl %>resizable__divider"></span>
              </span>
            </div>
          </th>
          <th class="<%- @tpl %>is-sortable <%- @tpl %>is-resizable" scope="col" aria-label="Stage">
