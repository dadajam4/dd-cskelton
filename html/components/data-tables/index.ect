            <div class="<%- @tpl %>resizable">
              <label for="cell-resize-handle-207" class="<%- @tpl %>assistive-text">Confidence column width</label>
              <input class="<%- @tpl %>resizable__input <%- @tpl %>assistive-text" type="range" min="20" max="1000" id="cell-resize-handle-207">
              <span class="<%- @tpl %>resizable__handle">
                <span class="<%- @tpl %>resizable__divider"></span>
              </span>
            </div>
