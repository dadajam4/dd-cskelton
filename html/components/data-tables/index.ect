          <th class="<%- @tpl %>is-sortable <%- @tpl %>is-resizable" scope="col" aria-label="Amount">
            <a href="javascript:void(0);" class="<%- @tpl %>th__action <%- @tpl %>text-link--reset">
              <span class="<%- @tpl %>assistive-text">Sort </span>
              <span class="<%- @tpl %>truncate" title="Amount">Amount</span>
