  <div class="<%- @tpl %>box <%- @tpl %>m-t--md <%- @tpl %>scrollable">
    <fieldset class="<%- @tpl %>form-element">
      <legend class="<%- @tpl %>form-element__label">Responsive Setting</legend>
      <div class="<%- @tpl %>form-element__control">
        <div class="<%- @tpl %>choice--btn-group <%- @tpl %>btn-group">
          <label class="<%- @tpl %>choice-btn <%- @tpl %>btn">
            <input class="demo-change-class" data-target="#demo-table-2" value="" type="radio" name="demo-table-2" checked>
            <span class="<%- @tpl %>choice__label">default</span>
          </label>
          <label class="<%- @tpl %>choice-btn <%- @tpl %>btn">
            <input class="demo-change-class" data-target="#demo-table-2" value="<%- @tpl %>table--stacked-horizontal" type="radio" name="demo-table-2">
            <span class="<%- @tpl %>choice__label">Stacked With Horizontal Cells</span>
          </label>
          <label class="<%- @tpl %>choice-btn <%- @tpl %>btn">
            <input class="demo-change-class" data-target="#demo-table-2" value="<%- @tpl %>table--stacked" type="radio" name="demo-table-2">
            <span class="<%- @tpl %>choice__label">Stacked</span>
          </label>
          <label class="<%- @tpl %>choice-btn <%- @tpl %>btn">
            <input class="demo-change-class" data-target="#demo-table-2" value="<%- @tpl %>sp-table--stacked-horizontal" type="radio" name="demo-table-2">
            <span class="<%- @tpl %>choice__label">Stacked With Horizontal Cells (SP)</span>
          </label>
          <label class="<%- @tpl %>choice-btn <%- @tpl %>btn">
            <input class="demo-change-class" data-target="#demo-table-2" value="<%- @tpl %>sp-table--stacked" type="radio" name="demo-table-2">
            <span class="<%- @tpl %>choice__label">Stacked (SP)</span>
          </label>
        </div>
      </div>
    </fieldset>
  </div>
</section>